<h1> <%= user.pseudo %> </h1>

<section class="profil-user">
    <ul>
        <li><a href="/add/articles/<%= user.id %>">ajouter un article</a></li>
        <li><a href="/add/items/<%= user.id %>">ajouter un item</a></li>
    </ul>

    <% if (articles.length > 0) { %>
    <ul>
        <% articles.forEach(function(article) { %>
            <li>
                <a href="/articles/<%= article.id %>">
                    <%= article.title %>
                </a>
            </li>
        <% })} %>
    </ul>

    <% if (items.length > 0) { %>
    <table>
        <thead>
        <tr>
            <th>nom</th>
            <th>description</th>
            <th>image</th>
            <th>prix</th>
        </tr>
        </thead>
        <tbody>
        <% items.forEach(function(item) { %>
            <tr>
                <td><%= item.title %></td>
                <td><%= item.content %></td>
                <td><img src="<%= item.url %>" alt="<%= item.description %>"></td>
                <td><%= item.price %> <img src="/img/icon.png" alt="une piece d'or" class="img-price"></td>
            </tr>
        <% })} %>
        </tbody>
    </table>
</section>


