<fieldset>
    <legend>Ajouter votre item</legend>
    <% if(error != null) { %>
        <p class="error"><%= error %></p>
    <% } %>
    <form action="/edit/items/<%= item.id %>" method="POST" class="form-items">
        <label for="title">Titre de l'item</label>
        <input type="text" id="title" name="title" value="<%= item.title %>">

        <label for="content">Description</label>
        <textarea id="content" name="content"><%= item.content %></textarea>

        <label for="price">Prix</label>
        <input type="number" id="price" name="price" min="0" max="999999999" value="<%= item.price %>">

        <label for="categories">Catégorie</label>
        <select name="categories" id="categories" required>

            <option value="0">Sélectionnez une catégorie</option>
            <% for(let i = 0; i < category.length; i++) { %>
                <option value="<%= category[i].id %>"><%= category[i].name %></option>
            <% } %>
        </select>

        <label for="image">Image</label>
        <div class="image">
            <% for(let i = 0; i < images.length; i++) { %>
                <label for="image<%= i %>" class="imgCheck"><img src="<%= images[i].url %>" alt="<%= images[i].description %>"></label>
                <input type="radio" id="image<%= i %>" class="hidden" name="image" value="<%= images[i].id %>">

            <% } %>
        </div>

        <input type="submit" value="Ajouter">
    </form>

</fieldset>

<script src="/js/addItems.js"></script>
