<fieldset>
    <legend>Modifier votre Article</legend>
    <% if(error !== null) { %>
        <p class="error"><%= error %></p>
    <% } %>
    <form action="/edit/articles/<%= article.id %>" method="POST" class="form-articles">
        <label for="title">Titre de l'article</label>
        <input type="text" id="title" name="title" value="<%= article.title %>">

        <label for="description">Description</label>
        <textarea id="description" name="description"><%= article.description %></textarea>

        <label for="categories">Catégorie</label>

        <select name="categories" id="categories" required>
            <option value="0">Sélectionnez une catégorie</option>
            <% for(let i = 0; i < category.length; i++) { %>
                <option value="<%= category[i].id %>"><%= category[i].name %></option>
            <% } %>
        </select>

        <input type="submit" value="Ajouter">
    </form>

</fieldset>