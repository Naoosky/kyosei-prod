<h1>Forum</h1>
<section>
    <h2>table des articles</h2>
    <table>
        <thead>
        <tr>
            <th>Créateur</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Catégorie</th>
            <th>Date de création</th>
        </tr>
        </thead>
        <tbody>
        <% for( let i = 0; i < articles.length; i++ ) { %>
            <tr>
                <td><%= articles[i].pseudo %></td>
                <td><a href="/articles/<%= articles[i].id %>"><%= articles[i].title %></a></td>
                <td><%= articles[i].description.substring(0, 30) %> ...</td>
                <td><%= articles[i].category %></td>
                <td><%= articles[i].date.toLocaleDateString() %></td>
            </tr>
        <% } %>
    </table>
</section>